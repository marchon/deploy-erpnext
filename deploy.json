{
    "builders": [
        {
            "type": "docker",
            "image": "ubuntu:14.04",
            "export_path": "image.tar"
        }
    ],
	"provisioners": [{
		"type": "shell",
		"script": "scripts/install_ansible.sh"
	}, {
		"type": "ansible-local",
		"playbook_file": "ansible/playbook.yml",
		"playbook_dir": "ansible",
		"role_paths": [
			"ansible/roles"
		]
	}],
    "post-processors": [{
        "type": "docker-import",
        "repository": "erpnext",
        "tag": "build-{{isotime \"020106\"}}"
    }]
}
